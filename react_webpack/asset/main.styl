html {
	height: 100%;
}

body {
	font-size: 14px;
	-webkit-user-select:none;
}

ul {
	list-style-type:none;
	display: flex;
	margin: 0;
	padding: 0;
}

li {
	line-height: 1.2rem;
	padding: 1rem 2rem;
	background-color: #884809;
	border-right: 1px solid wheat;
	color: white;
}

footer {
	display: flex;
	height: 40px;
	color: black;
	line-height: 40px;
}

.process {
	height: 40px;
	width: 100%;
	line-height: 40px;
	border: 1px solid red;
}

.process div {
	max-width: 99%;
	background-color: green;
	height: 100%;
}